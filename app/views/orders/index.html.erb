<h1>My Orders</h1>

<% if @orders.any? %>
  <table class="table">
    <thead>
      <tr>
        <th>Order ID</th>
        <th>Date</th>
        <th>Total Price</th>
        <th>Status</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @orders.each do |order| %>
        <tr>
          <td><%= order.id %></td>
          <td><%= order.created_at.strftime("%B %d, %Y") %></td>
          <td><%= number_to_currency(order.total_price) %></td>
          <td><%= order.status %></td>
          <td><%= link_to 'View', order_path(order), class: 'btn btn-primary' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>You have no orders.</p>
<% end %>