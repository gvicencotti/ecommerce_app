<div class="container mt-5">
  <div class="card">
    <div class="card-header bg-primary text-white">
      <h3>Address Form</h3>
    </div>
    <div class="card-body">
      <%= form_with(model: [current_user, address], local: true, url: address.persisted? ? user_address_path(current_user) : user_address_path(current_user)) do |form| %>
        <div class="form-group mb-3">
          <%= form.label :cep, "CEP" %>
          <%= form.text_field :cep, class: 'form-control', id: 'cep', oninput: "fetchAddress(this.value)" %>
        </div>
        <div class="form-group mb-3">
          <%= form.label :street, "Street" %>
          <%= form.text_field :street, class: 'form-control', id: 'street' %>
        </div>
        <div class="form-group mb-3">
          <%= form.label :neighborhood, "Neighborhood" %>
          <%= form.text_field :neighborhood, class: 'form-control', id: 'neighborhood' %>
        </div>
        <div class="form-group mb-3">
          <%= form.label :city, "City" %>
          <%= form.text_field :city, class: 'form-control', id: 'city' %>
        </div>
        <div class="form-group mb-3">
          <%= form.label :state, "State" %>
          <%= form.text_field :state, class: 'form-control', id: 'state' %>
        </div>
        <div class="actions">
          <%= form.submit 'Save Address', class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>