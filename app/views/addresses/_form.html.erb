<%= form_with(model: [current_user, address], local: true, url: user_address_path(current_user)) do |form| %>
  <div class="form-group">
    <%= form.label :cep %>
    <%= form.text_field :cep, class: 'form-control', oninput: "fetchAddress(this.value)" %>
  </div>
  <div class="form-group">
    <%= form.label :street %>
    <%= form.text_field :street, class: 'form-control', id: 'street' %>
  </div>
  <div class="form-group">
    <%= form.label :neighborhood %>
    <%= form.text_field :neighborhood, class: 'form-control', id: 'neighborhood' %>
  </div>
  <div class="form-group">
    <%= form.label :city %>
    <%= form.text_field :city, class: 'form-control', id: 'city' %>
  </div>
  <div class="form-group">
    <%= form.label :state %>
    <%= form.text_field :state, class: 'form-control', id: 'state' %>
  </div>
  <div class="actions">
    <%= form.submit 'Save Address', class: 'btn btn-primary' %>
  </div>
<% end %>