<h1>Your Shopping Cart</h1>

<table class="table table-striped mt-4">
  <thead>
    <tr>
      <th>Product</th>
      <th>Price</th>
      <th>Quantity</th>
      <th>Total</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @cart.cart_items.each do |item| %>
      <tr>
        <td><%= item.product.name %></td>
        <td><%= number_to_currency(item.product.price) %></td>
        <td>
          <%= form_with(model: item, local: true, method: :patch) do |f| %>
            <%= f.number_field :quantity, value: item.quantity, min: 1 %>
            <%= f.submit 'Update', class: 'btn btn-primary' %>
          <% end %>
        </td>
        <td><%= number_to_currency(item.total_price) %></td>
        <td>
          <%= link_to 'Remove', cart_item_path(item), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="mt-4">
  <h3>Total: <%= number_to_currency(@cart.cart_items.sum { |item| item.total_price }) %></h3>
</div>

<div class="mt-4">
  <%= link_to 'Continue Shopping', products_path, class: 'btn btn-secondary' %>
  <%= link_to 'Checkout', new_order_path, class: 'btn btn-success' %>
</div>