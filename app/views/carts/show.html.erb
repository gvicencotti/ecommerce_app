<h1>Your Shopping Cart</h1>

<% if @cart.cart_items.any? %>
    <table>
        <thead>
            <tr>
                <th>Product</th>
                <th>Quantity</th>
                <th>Price</th>
                <th>Total</th>
            </tr>
        </thead>
        <tbody>
            <% @cart.cart_items.each do |item| %>
                <tr>
                    <td><%= item.product.name %></td>
                    <td>
                        <%= form_with(model: item, local: true, method: :patch) do |item| %>
                            <%= form.number_field :quantity, value: item.quantity, min: 1 %>
                            <%= form.submit 'Update'%>
                        <% end %>
                    </td>
                    <td><%= number_to_currency(item.product.price) %></td>
                    <td><%= number_to_currency(item.product.price * item.quantity) %></td>
                    <td>
                        <%= link_to 'Remove', cart_item_path(item), method: :delete, data: { confirm: 'Are you sure?'} %>
                    </td>
                </tr>
            <% end %>
        </tbody>
    </table>
    <h2>Total: <%= number_to_currency(@cart.cart_items.sum { |item| item.product.price * item.quantity }) %></h2>
    <% else %>
        <p>Your cart is empty.</p>
    <% end %>
